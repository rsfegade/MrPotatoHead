<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:src="@drawable/body"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/arms"
        android:checked="false"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="arms"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ears"
        android:id="@+id/ears"
        android:checked="false"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:onClick="ears"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyebrows"
        android:id="@+id/eyebrows"
        android:checked="false"
        android:layout_below="@+id/arms"
        android:layout_alignLeft="@+id/arms"
        android:layout_alignStart="@+id/arms"
        android:onClick="eyebrows"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:id="@+id/eyes"
        android:layout_below="@+id/ears"
        android:layout_alignRight="@+id/ears"
        android:layout_alignEnd="@+id/ears"
        android:checked="false"
        android:onClick="eyes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses"
        android:id="@+id/glasses"
        android:layout_below="@+id/eyebrows"
        android:layout_alignLeft="@+id/eyebrows"
        android:layout_alignStart="@+id/eyebrows"
        android:checked="false"
        android:onClick="glasses"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hat"
        android:id="@+id/hat"
        android:layout_alignBottom="@+id/glasses"
        android:layout_alignLeft="@+id/eyes"
        android:layout_alignStart="@+id/eyes"
        android:checked="false"
        android:onClick="hat"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouth"
        android:id="@+id/mouth"
        android:layout_below="@+id/glasses"
        android:layout_alignLeft="@+id/glasses"
        android:layout_alignStart="@+id/glasses"
        android:checked="false"
        android:onClick="mouth"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moustache"
        android:id="@+id/moustache"
        android:checked="false"
        android:layout_below="@+id/hat"
        android:layout_alignLeft="@+id/hat"
        android:layout_alignStart="@+id/hat"
        android:onClick="moustache"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/nose"
        android:checked="false"
        android:layout_below="@+id/mouth"
        android:layout_alignLeft="@+id/mouth"
        android:layout_alignStart="@+id/mouth"
        android:onClick="nose"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:id="@+id/shoes"
        android:checked="false"
        android:layout_alignTop="@+id/nose"
        android:layout_alignLeft="@+id/moustache"
        android:layout_alignStart="@+id/moustache"
        android:onClick="shoes"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_arms"
        android:src="@drawable/arms"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
       android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_eyes"
        android:src="@drawable/eyes"
        android:layout_above="@+id/arms"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="35dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_ears"
        android:src="@drawable/ears"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_eyebrows"
        android:src="@drawable/eyebrows"
        android:layout_alignBottom="@+id/im_eyes"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_glasses"
        android:src="@drawable/glasses"
        android:layout_alignBottom="@+id/im_eyes"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_hat"
        android:src="@drawable/hat"
        android:layout_above="@+id/arms"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_mouth"
        android:src="@drawable/mouth"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_moustache"
        android:src="@drawable/mustache"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_nose"
        android:src="@drawable/nose"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_shoes"
        android:src="@drawable/shoes"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible"/>

</RelativeLayout>
